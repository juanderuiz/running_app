<% if @shoes.empty? %>

  <h3>No shoes Available!</h3>

<% else %>
  <!-- Inicio Lista Zapatillas -->
  <div id="shoes" class="container">
    <header>
      <h3>Lista de zapatillas de <%= link_to @runner.name, @runner %></h3>
    </header>
    <table>
      <thead>
       <tr>
        <th>Modelo</th>
        <th>Kms</th>
        <th></th>
       </tr>
      </thead>
      <tbody>
        <%= render @shoes %>
      </tbody>
    </table>
  </div>
  <!-- Fin Lista Zapatillas -->

<% end %>

<% if @runner == current_runner %>

  <div id="newshoe">

    <h4>¿Tienes zapatillas nuevas? ¡Súbelas!</h4>

    <%= form_for([@runner, @shoe], remote: true) do |f| %>
      <% if @shoe.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@shoe.errors.count, "error") %> prohibited this shoe from being saved:</h2>

          <ul>
          <% @shoe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :nombre %><br>
        <%= f.text_area :nombre %>
      </div>
      <div class="field">
        <%= f.label :totalkms %><br>
        <%= f.number_field :totalkms %>
      </div>
      <div class="field">
        <%= f.label :avatar %><br>
        <%= f.file_field :avatar %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

  </div>
  <!-- Fin new Shoe -->
<% end %>

