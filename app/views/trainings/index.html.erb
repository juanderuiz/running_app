<header>
<h3>Lista de sesiones de entrenamiento de <%= link_to @runner.name, @runner %></h3>
</header>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Distancia</th>
      <th>Tiempo</th>
      <th>Zapatillas</th>
      <th>Descripcion</th>
      <th>Comentarios</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trainings.each do |training| %>
      <tr>
	<td><%= training.date %></td>
        <td><%= sprintf("%0.02f",training.kms) %></td>
        <td><%= training.time %></td>
	<% if training.shoe %>
          <td><%= link_to training.shoe.nombre.titleize, training.shoe %></td>
        <% else %>
          <td>undefined</td> 
        <% end %> 
        <td><%= training.description %></td>
        <td><%= training.comments %></td>
        <td class="enlace ver"><%= link_to 'Ver', [@runner, training] %></td>
<td class="enlace ver"><%= link_to 'Eliminar', [@runner, training], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

