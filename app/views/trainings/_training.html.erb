<!-- Entrenamiento -->
      <%= div_for training do %>
        <h4 class="date"><%= training.id %></h4>
        <h4 class="date"><%= training.date %></h4>
        <h4 class="kms"><%= sprintf("%0.02f", training.kms) %></h4>
        <% if !training.time %>
          <h4 class="time">Tiempo NO registrado</h4>
        <% else %>
          <h4 class="time"><%= training.time %> segundos</h4>
        <% end %>
        <% if training.shoe %>
          <%= link_to training.shoe.nombre.titleize, [training.runner, training.shoe] %>
        <% else %>
          <p>Unknown shoes</p>
        <% end %>
        <p class="description"><%= training.description %></p>
        <% if training.comments.empty? %>
          <p> Sin comentarios</p>
        <% else %>
          <a class="vercomentarios">Ver comentarios</a>
          <!-- Comments tiene display none -->
          <p class="comments"><%= truncate(training.comments, length: 30, separator: ' ', omission: '...') %></p>
        <% end %>
        
        <div class="acciones">
          <%= link_to 'Ver', [@runner, training] %>
          <% if training.runner == current_runner %>
            <%= link_to 'Eliminar', [@runner, training], method: :delete, remote: true, data: { confirm: 'Â¿Seguro?' }%>
          <% end %>   
        </div>
      <% end %>
<!-- Fin Entrenamiento -->